<%= render 'tabs' %>
<h2 class="title">Шаблоны</h2>
<div class="buttons">
  <%= link_to 'Создать', new_project_testkit_path, :class => 'icon icon-add' if User.current.allowed_to?(:create_and_edit_testkits, @project) %>
</div>
<table class="list">
  <thead>
    <th>Название</th>
    <th>Автор</th>
    <th>Создано</th>
    <th>Обновлено</th>
    <th>Статистика</th>
    <% if User.current.allowed_to?(:create_and_edit_testkits, @project) %>
      <% if User.current.allowed_to?(:create_and_edit_runs, @project) %>
        <th width="10px"></th>
      <% end %>
      <th width="10px"></th>
      <% if User.current.allowed_to?(:delete_templates, @project) %>
        <th width="10px"></th>
      <% end %>
    <% end %>
  </thead>
  <% if @templates.present? %>
    <% @templates.each do |testkit| %>
      <tr>
        <td><%= testkit.name -%></td>
        <td align="center"><%= testkit.author -%></td>
        <td align="center"><%= format_time(testkit.created_at) -%></td>
        <td align="center"><%= format_time(testkit.updated_at) -%></td>
        <td><%= testkit.template_statistics.collect {|k,v| content_tag(:span, k, :class => k+'_style') + ":#{v}" }.join(', ').html_safe %>, количество запусков: <%= testkit.templates_done %></td>
        <% if User.current.allowed_to?(:create_and_edit_testkits, @project) %>
          <% if User.current.allowed_to?(:create_and_edit_runs, @project) %>
            <td><%= link_to '', project_testkit_new_run_path(testkit_id: testkit.id), :class => 'icon icon-test' -%></td>
          <% end %>
          <td><%= link_to '', edit_project_testkit_path(id: testkit.id), :class => 'icon icon-edit' -%></td>
          <% if User.current.allowed_to?(:delete_templates, @project) %>
            <td><%= link_to '', project_testkit_path(id: testkit.id), :method => :delete, :class => 'icon icon-del', data: { confirm: testkit.have_runs? ? "Шаблон будет перемещен в архив" : "Шаблон будет удален" } -%></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  <% else %>
  <tr>
    <td colspan="8" align="center">Шаблоны отсутствуют</td>
  </tr>
  <% end %>
</table>
<br/><h2 class="title">Запуски</h2>
<%= render :partial => 'table_runs', locals: {runs: @runs} %>
<% if User.current.allowed_to?(:view_reports, @project) %>
  <% if @last_reports.present? %>
  <br/><h2 class="title">Последние отчеты</h2>
  <%= render :partial => 'table_reports', locals: {reports: @last_reports} %>
  <% end %>
<% end %>
<br/>
